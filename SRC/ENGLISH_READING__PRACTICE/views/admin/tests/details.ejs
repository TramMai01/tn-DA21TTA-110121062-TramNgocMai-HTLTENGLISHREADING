<!-- Tạo file details.ejs trong thư mục views/admin/tests/ -->
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-800"><%= test.title %></h1>
        <div class="mt-1 flex items-center text-sm text-gray-500">
          <span class="mr-2">Created by: <%= test.createdBy.fullName %></span>
          <span>•</span>
          <span class="mx-2"><%= new Date(test.createdAt).toLocaleDateString() %></span>
          <span>•</span>

        </div>
      </div>
      
      <div class="flex space-x-2">
        <a href="/admin/tests/<%= test._id %>/edit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
          Edit
        </a>
        
        <a href="/admin/tests" class="text-blue-500 border border-blue-500 hover:bg-blue-50 px-4 py-2 rounded-md transition duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Back to Tests
        </a>
      </div>
    </div>
  
    <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8">
      <!-- Test Overview Card -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-blue-500 text-white px-4 py-4">
          <h2 class="text-xl font-semibold">Test Overview</h2>
        </div>
        <div class="p-4 space-y-3">
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Time Limit:</span>
            <span class="font-medium"><%= test.timeLimit %> minutes</span>
          </div>
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Total Questions:</span>
            <span class="font-medium"><%= test.totalScore %> questions</span>
          </div>
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Total Score:</span>
            <span class="font-medium"><%= test.totalScore %> points</span>
          </div>
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Passages:</span>
            <span class="font-medium"><%= test.passages.length %></span>
          </div>
        </div>
      </div>
  
    <!-- Passages Section -->
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Reading Passages</h2>
      
      <div class="space-y-6">
        <% test.passages.forEach((passage, passageIndex) => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex justify-between items-center">
              <h3 class="text-lg font-medium text-gray-800">
                <%= passageIndex + 1 %>. <%= passage.passageId ? passage.passageId.title : 'Passage không tồn tại' %>
              </h3>
        
            </div>
            
            <div class="p-4">
              <div class="mb-4">
                <h4 class="font-medium text-gray-700 mb-2">Passage Content:</h4>
                <div class="p-3 bg-gray-50 rounded border border-gray-200 text-sm max-h-40 overflow-y-auto">
                  <% if (passage.passageId && passage.passageId.content) { %>
                    <%= passage.passageId.content %>
                  <% } else { %>
                    <span class="text-gray-500 italic">Nội dung passage không có sẵn</span>
                  <% } %>
                </div>
                <div class="mt-2 text-right">
                  <% if (passage.passageId && passage.passageId._id) { %>
                    <a href="/admin/passages/<%= passage.passageId._id %>" class="text-blue-500 hover:text-blue-700 text-sm">
                      View Full Passage
                    </a>
                  <% } %>
                </div>
              </div>
              
              <div>
                <h4 class="font-medium text-gray-700 mb-2">Questions (<%= passage.questions.length %>):</h4>
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        #
                      </th>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Question
                      </th>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Type
                      </th>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Points
                      </th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% passage.questions.forEach((question, qIndex) => { %>
                      <tr>
                        <td class="px-4 py-2 text-sm text-gray-500">
                          <%= qIndex + 1 %>
                        </td>
                        <td class="px-4 py-2">
                          <a href="/admin/questions/<%= question._id %>/edit" class="text-sm text-blue-500 hover:text-blue-700">
                            <%= question.questionText.length > 60 ? question.questionText.substring(0, 60) + '...' : question.questionText %>
                          </a>
                        </td>
                        <td class="px-4 py-2">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                            <%= question.questionType === 'multiple_choice' ? 'bg-blue-100 text-blue-800' : 
                              question.questionType === 'fill_blank' ? 'bg-purple-100 text-purple-800' : 
                              question.questionType === 'matching' ? 'bg-amber-100 text-amber-800' : 
                              'bg-emerald-100 text-emerald-800' %>">
                            <%= question.questionType.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                          </span>
                        </td>
                        <td class="px-4 py-2 text-sm text-gray-500">
                          <%= question.score || 1 %>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
  
  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="fixed inset-0 flex items-center justify-center z-50 hidden">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="bg-white rounded-lg shadow-lg p-6 z-10 max-w-md mx-auto">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Confirm Deletion</h3>
      <p class="text-gray-700 mb-6">Are you sure you want to delete this test? This action cannot be undone.</p>
      <div class="flex justify-end space-x-4">
        <button id="cancelDeleteBtn" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-md transition duration-200">
          Cancel
        </button>
        <button id="confirmDeleteBtn" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition duration-200">
          Delete Test
        </button>
      </div>
    </div>
  </div>
  <% scripts = `<script src="/js/admin/test/detail.js"></script>` %>