<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Create Reading Passage</h1>
    <a href="/admin/passages" class="text-blue-500 hover:text-blue-700 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Passages
    </a>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <form action="/admin/passages/create" method="POST" class="p-6">
      <% if (locals.error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
          <p><%= locals.error %></p>
        </div>
      <% } %>

      <div class="mb-6">
        <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
        <textarea 
          id="title" 
          name="title" 
          rows="3"
          placeholder="Enter passage title" 
          class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
          required
        ><%= passage?.title || '' %></textarea>
        <p class="mt-1 text-sm text-gray-500">Enter the title of the reading passage (can span multiple lines)</p>
      </div>
      <div class="mb-6">
        <label for="content" class="block text-sm font-medium text-gray-700 mb-1">Content</label>
        <textarea 
          id="content" 
          name="content" 
          rows="12" 
          placeholder="Enter passage content" 
          class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
          required
        ><%= passage?.content || '' %></textarea>
        <p class="mt-1 text-sm text-gray-500">Enter the full text of the reading passage</p>
      </div>

      <div class="flex justify-end">
        <button 
          type="submit" 
          class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-md transition duration-200"
        >
          Create Passage
        </button>
      </div>
    </form>
  </div>
</div>
<%
scripts = `
<script>
  // Optional: Add a character/word counter for both title and content
  document.addEventListener('DOMContentLoaded', function() {
    function addCounter(elementId) {
      const textarea = document.getElementById(elementId);
      const characterCount = document.createElement('div');
      characterCount.className = 'text-sm text-gray-500 mt-1';
      
      textarea.parentNode.insertBefore(characterCount, textarea.nextSibling);
      
      function updateCount() {
        const text = textarea.value;
        const charCount = text.length;
        const wordCount = text.trim() ? text.trim().split(/\\s+/).length : 0;
        
        characterCount.textContent = charCount + ' characters, ' + wordCount + ' words';
      }
      
      textarea.addEventListener('input', updateCount);
      updateCount();
    }
    
    addCounter('title');
    addCounter('content');
  });
</script>
`;
%>