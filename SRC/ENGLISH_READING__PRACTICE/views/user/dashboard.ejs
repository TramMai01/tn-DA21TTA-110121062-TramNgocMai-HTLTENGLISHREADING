<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header Section với gradient -->
    <div class="mb-12 text-center">
      <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-2xl p-8 shadow-xl">
        <h1 class="text-4xl font-bold mb-3">Welcome Back!</h1>
        <p class="text-xl text-blue-100">Hello, <%= user.name || user.email %></p>
        <div class="mt-4 w-20 h-1 bg-white rounded-full mx-auto"></div>
      </div>
    </div>

    <!-- Stats Cards với thiết kế mới -->
    <div class="grid grid-cols-1 md:grid-cols-1 gap-8 mb-12">
      <!-- Stats Card 1 - Tests Completed -->
      <div class="group relative">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
        <div class="relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold text-gray-700 mb-2">Tests Completed</h2>
              <p class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
                <% 
                  const completedCount = (recentAttempts && Array.isArray(recentAttempts)) 
                    ? recentAttempts.filter(a => a && a.completedAt).length 
                    : 0;
                %>
                <%= completedCount %>
              </p>
            </div>
            <div class="p-4 rounded-full bg-gradient-to-r from-blue-100 to-indigo-100">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
          </div>
        </div>
      </div> 
    </div>

    <!-- Recent Attempts Section với thiết kế mới -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-8 py-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-2xl font-bold text-gray-900">Recent Attempts</h3>
            <p class="text-gray-600 mt-1">Track the results of recent tests</p>
          </div>
          <div class="p-3 rounded-full bg-gradient-to-r from-blue-500 to-indigo-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 00-2-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
        </div>
      </div>
      
      <div class="overflow-x-auto">
        <% if (recentAttempts && recentAttempts.length > 0) { %>
          <table class="min-w-full">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Test Name</th>
                <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Date</th>
                <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Score</th>
                <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">IELTS Band</th>
                <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Action</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% recentAttempts.forEach((attempt, index) => { %>
                <tr class="hover:bg-gray-50 transition-colors duration-200">
                  <td class="px-8 py-6">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-gradient-to-r from-blue-400 to-indigo-400 flex items-center justify-center text-white font-bold">
                          <%= index + 1 %>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-lg font-semibold text-gray-900">
                          <%= attempt.test ? attempt.test.title : 'Test not found' %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-8 py-6">
                    <div class="text-sm font-medium text-gray-900">
                      <%= attempt.completedAt ? new Date(attempt.completedAt).toLocaleDateString('vi-VN') : 'In progress' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= attempt.completedAt ? new Date(attempt.completedAt).toLocaleTimeString('vi-VN') : '' %>
                    </div>
                  </td>
                  <td class="px-8 py-6">
                    <% if (attempt.completedAt) { %>
                      <div class="flex items-center">
                        <div class="text-2xl font-bold text-gray-900"><%= Math.round(attempt.percentageScore || 0) %>%</div>
                        <div class="ml-2">
                          <div class="text-sm text-gray-500"><%= attempt.score || 0 %>/<%= attempt.totalPossibleScore || 0 %></div>
                          <div class="text-xs text-gray-400">điểm</div>
                        </div>
                      </div>
                    <% } else { %>
                      <div class="text-sm text-gray-500 italic">Not completed</div>
                    <% } %>
                  </td>
                  <td class="px-8 py-6">
                    <% if (attempt.completedAt && attempt.ieltsScore) { %>
                      <div class="flex items-center">
                        <div class="text-2xl font-bold text-orange-600"><%= attempt.ieltsScore %></div>
                        <div class="ml-2">
                          <div class="text-xs text-orange-500 font-medium">BAND</div>
                          <% if (attempt.ieltsScore40) { %>
                            <div class="text-xs text-gray-400">(<%= attempt.ieltsScore40 %>/40)</div>
                          <% } %>
                        </div>
                      </div>
                    <% } else if (attempt.completedAt) { %>
                      <div class="text-sm text-gray-500 italic">N/A</div>
                    <% } else { %>
                      <div class="text-sm text-gray-500 italic">-</div>
                    <% } %>
                  </td>
                  <td class="px-8 py-6">
                    <% if (attempt.completedAt) { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Completed
                      </span>
                    <% } else { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                        </svg>
                        In progress
                      </span>
                    <% } %>
                  </td>
                  <td class="px-8 py-6">
                    <% if (attempt.completedAt) { %>
                      <a href="/user/results/<%= attempt.test._id %>" 
                         class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-500 to-indigo-500 text-white text-sm font-medium rounded-lg hover:from-blue-600 hover:to-indigo-600 transition-all duration-200 shadow-md hover:shadow-lg">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View Results
                      </a>
                    <% } else { %>
                      <a href="/user/test/<%= attempt.test._id %>" 
                         class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-sm font-medium rounded-lg hover:from-green-600 hover:to-emerald-600 transition-all duration-200 shadow-md hover:shadow-lg">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Continue
                      </a>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <div class="text-center py-16">
            <div class="mx-auto h-24 w-24 rounded-full bg-gradient-to-r from-gray-100 to-gray-200 flex items-center justify-center mb-6">
              <svg class="h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No tests completed</h3>
            <p class="text-gray-600">You haven't completed any tests yet. Start with the first test!</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Action Button để bắt đầu thi -->
    <div class="mt-12 text-center">
      <a href="/user/tests" 
         class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-lg font-semibold rounded-2xl hover:from-blue-700 hover:to-indigo-700 transition-all duration-300 shadow-xl hover:shadow-2xl transform hover:-translate-y-1">
        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        Start Test
      </a>
    </div>
  </div>
</div> 